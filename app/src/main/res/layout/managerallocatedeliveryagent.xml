<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle"
    tools:context="com.example.hp.deliveryproject.ManagerAssignDeliveryAgent">

    <TextView
        android:id="@+id/assigndeliveryagent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Assign Delivery Agent"
        android:editable="false"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/editText8"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="71dp" />

    <TextView
        android:id="@+id/editText8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Type Delivery Agent User Name or User ID:"
        android:editable="false"
        android:textAlignment="center"
        android:background="@android:color/transparent"
        android:textStyle="bold"
        android:layout_above="@+id/etName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <EditText
        android:id="@+id/etName"

        android:layout_width="250dp"
        style="@style/editText_style"
        android:inputType="textEmailAddress"
        android:textColorLink="@android:color/background_dark"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/assigndeliveryagent"
        android:layout_alignEnd="@+id/assigndeliveryagent"
        android:layout_alignLeft="@+id/assigndeliveryagent"
        android:layout_alignStart="@+id/assigndeliveryagent" />
    <Button

        android:id="@+id/buttonallocate"
        android:text="Allocate"
        android:textAllCaps="false"
        android:layout_width="100dp"
        style="@style/button_style"
        android:layout_alignBaseline="@+id/buttonclear"
        android:layout_alignBottom="@+id/buttonclear"
        android:layout_alignLeft="@+id/assigndeliveryagent"
        android:layout_alignStart="@+id/assigndeliveryagent" />
    <Button

        android:id="@+id/buttonclear"
        android:text="Clear"
        android:textAllCaps="false"
        android:layout_width="100dp"
        style="@style/button_style"
        android:layout_below="@+id/etName"
        android:layout_alignRight="@+id/etName"
        android:layout_alignEnd="@+id/etName" />
</RelativeLayout>